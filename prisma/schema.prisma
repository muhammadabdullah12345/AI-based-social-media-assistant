generator client {
  provider = "prisma-client-js"
  // engineType = "binary"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  posts     Post[]
  createdAt DateTime @default(now())
}

model Post {
  id       String     @id @default(uuid())
  userId   String
  platform Platform
  content  String
  status   PostStatus @default(DRAFT)

  scheduledAt  DateTime?
  publishedAt  DateTime?
  errorMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

enum Platform {
  TWITTER
  INSTAGRAM
  FACEBOOK
  LINKEDIN
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  FAILED
}

model SocialAccount {
  id       String   @id @default(uuid())
  userId   String
  platform Platform

  accessToken  String
  refreshToken String?
  expiresAt    DateTime?

  createdAt DateTime @default(now())
}
